<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".tofu">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_x="330dp"
        android:layout_y="650dp"
        android:baselineAligned="false"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t4"
        app:srcCompat="@drawable/image" />

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="660dp" />

    <ImageButton
        android:id="@+id/t1"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_x="20dp"
        android:layout_y="120dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:srcCompat="@drawable/t1" />

    <ImageButton
        android:id="@+id/t2"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_x="215dp"
        android:layout_y="120dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/t1"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:srcCompat="@drawable/t2" />

    <ImageButton
        android:id="@+id/t3"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_x="20dp"
        android:layout_y="420dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:srcCompat="@drawable/t3" />

    <ImageButton
        android:id="@+id/t4"
        android:layout_width="180dp"
        android:layout_height="225dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="8dp"
        android:layout_x="215dp"
        android:layout_y="420dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t3"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/t4" />

</AbsoluteLayout>