<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/silver"
    android:id="@+id/drawer"
    tools:context=".MainActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="1dp"
            android:layout_y="638dp"
            android:text="00:00"
            android:textSize="70sp"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="319dp"></TextView>

        <ImageButton
            android:id="@+id/frien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="60dp"
            android:layout_y="85dp"
            app:srcCompat="@drawable/friend2"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="116dp" />

        <ImageButton
            android:id="@+id/eat"
            android:layout_width="210dp"
            android:layout_height="186dp"
            android:layout_x="0dp"
            android:layout_y="303dp"
            app:srcCompat="@drawable/eat"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="342dp" />

        <ImageButton
            android:id="@+id/exercise"
            android:layout_width="198dp"
            android:layout_height="190dp"
            android:layout_x="217dp"
            android:layout_y="303dp"
            app:srcCompat="@drawable/exercise" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/chatbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="336dp"
            android:layout_y="664dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_dialog_email"
            tools:layout_editor_absoluteX="260dp"
            tools:layout_editor_absoluteY="630dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="306dp"
            android:layout_y="598dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="208dp"
            android:layout_y="594dp"
            android:text="Button"
            tools:layout_editor_absoluteX="193dp"
            tools:layout_editor_absoluteY="593dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="70dp"
            android:layout_y="587dp"
            android:text="Button"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="579dp" />

    </AbsoluteLayout>

<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/header"
    app:menu="@menu/drawermenu">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>